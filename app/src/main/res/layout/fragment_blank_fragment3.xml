<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".BlankFragment3"
                android:orientation="vertical"

>

    <!-- TODO: Update blank fragment layout -->
  <ImageView
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:src="@drawable/snake"
          android:id="@+id/animalImage"


          android:layout_alignParentStart="true" android:layout_alignParentTop="true" android:layout_marginTop="0dp"
          android:layout_marginStart="0dp" android:cropToPadding="false" android:scaleType="fitXY"/>
    <TextView

            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="Name: "
            android:layout_below="@+id/animalImage"
            android:layout_alignParentLeft="true"
            android:paddingRight="10dp"
            android:paddingLeft="0dp"
            android:paddingBottom="10dp"

    />
    <TextView
              android:id="@id/text2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="35sp"
              android:text="Mr.Clean "
              android:layout_below="@+id/animalImage"
              android:layout_toRightOf="@+id/text1"
              android:paddingBottom="10dp"



    />


    <TextView

              android:id="@+id/aggressive"
              android:layout_toRightOf="@id/text1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/text1"
              android:layout_alignParentLeft="true"
              android:text="Aggressive: "
              android:textSize="35dp"












    />

    <TextView


              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/text2"
              android:layout_toRightOf="@id/aggressive"
              android:textSize="35dp"
              android:text="Hella"







    />
    <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poison"
                android:textSize="35dp"
                android:layout_below="@id/aggressive"




    />


</RelativeLayout>